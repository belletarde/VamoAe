<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.kevin.vamoae.activity.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Login"
        android:inputType="textEmailAddress"
        android:id="@+id/txt_user_login"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:id="@+id/txt_password_login"/>


    <Button
        android:id="@+id/btn_enter_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Entra"/>
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/txt_create_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ainda nÃ£o tem conta? Registre-se agora."/>




</LinearLayout>
